<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="403.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.project.drill.controller.MainWindowController">
  <children>
    <AnchorPane fx:id="mainPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="345.0" prefWidth="645.0" VBox.vgrow="ALWAYS">
      <children>
            <Button fx:id="checkButton" layoutX="504.0" layoutY="348.0" mnemonicParsing="false" onAction="#handleCheckAction" prefHeight="25.0" prefWidth="103.0" text="Sprawdź" visible="false" />
            <Button fx:id="nextButton" defaultButton="true" layoutX="504.0" layoutY="348.0" mnemonicParsing="false" onAction="#handleNextAction" prefHeight="25.0" prefWidth="103.0" text="Start" />
            <Label fx:id="questionLabel" alignment="TOP_LEFT" layoutX="28.0" layoutY="26.0" prefHeight="75.0" prefWidth="570.0" text=".">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="taskLabel" layoutX="250.0" layoutY="1.0" prefHeight="27.0" prefWidth="208.0" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <VBox fx:id="answerBox" layoutX="45.0" layoutY="112.0" prefHeight="233.0" prefWidth="564.0" spacing="8.0" AnchorPane.bottomAnchor="70.0" />
            <Label fx:id="endLabel2" layoutX="198.0" layoutY="122.0" prefHeight="25.0" prefWidth="183.0" text="Czy chcesz spróbować jeszcze raz?" visible="false" />
            <Label fx:id="pointsLabel" layoutX="45.0" layoutY="342.0" prefHeight="36.0" prefWidth="179.0" text="Punkty: " />
            <Label fx:id="endLabel1" layoutX="197.0" layoutY="81.0" prefHeight="27.0" prefWidth="310.0" text="Gratulacje! Zdobyłeś/łaś x na y punktów!" visible="false" />
            <Button fx:id="yesButton" layoutX="57.0" layoutY="256.0" mnemonicParsing="false" onAction="#handleYesAction" prefHeight="52.0" prefWidth="232.0" text="Tak" visible="false" />
            <Button fx:id="noButton" layoutX="342.0" layoutY="256.0" mnemonicParsing="false" onAction="#handleNoAction" prefHeight="52.0" prefWidth="232.0" text="Nie" visible="false" />
            <Button fx:id="statsButton" layoutX="342.0" layoutY="322.0" mnemonicParsing="false" onAction="#handleStatsAction" prefHeight="52.0" prefWidth="232.0" text="Statystyki" visible="false" />
      </children>
    </AnchorPane>
  </children>
</VBox>
